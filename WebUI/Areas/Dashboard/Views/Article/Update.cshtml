@model Article

<form method="post" enctype="multipart/form-data">

<div class="form-group">
    <input name="Title" value="@Model.Title" type="text" class="form-control" placeholder="Title" />
</div>


<div class="form-group">
    <textarea name="Description" value="" class="form-control" >@Model.Description</textarea>
</div>

<div class="form-group">
    <input name="PhotoUrl" value="@Model.PhotoUrl" type="hidden" class="form-control" placeholder="PhotoUrl" />
    <input name="photo" type="file" class="form-control" placeholder="PhotoUrl" />
</div>

<div class="form-group">
    <select class="form-control" name="CategoryId">
       @foreach(var category in  ViewData["Categories"] as List<Category>){
        if(category.Id == Model.CategoryId){
            <option value="@category.Id" selected>@category.Name</option>
        }else{
            <option value="@category.Id">@category.Name</option>
        }
       }
    </select>
</div>
<div class="form-group">
    <input type="submit" class="form-control" value="create" placeholder="PhotoUrl" />
</div>

</form>