@model List<Article>


<a class="btn btn-success btn-sm my-3" href="/dashboard/article/create/">Create</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Photo</th>
      <th scope="col">Category</th>
      <th scope="col">Author</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  @{
    int count = 1;
  }
   @foreach(var article in  Model)
   {
    <tr>
        <th scope="row">@count</th>
        <td>
            <img src="@article.PhotoUrl" width="100" heigth="100" />
        </td>
        <td>@article.Category.Name</td>
        <td>@article.User.FirstName  @article.User.LastName</td>
        <td>
            <a class="btn btn-danger btn-sm" href="/dashboard/article/delete/@article.Id">Delete</a>
            <a class="btn btn-warning btn-sm" href="/dashboard/article/update/@article.Id">Update</a>
        </td>
    </tr>

    count++;
   }

  </tbody>
</table>